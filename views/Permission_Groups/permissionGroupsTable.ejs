<!-- @format -->

<!-- table divider -->
<table class="table searchable sortable" id="permission_group_table">
  <!-- header -->
  <thead>
    <tr>
      <th class="table_checkbox" scope="col"></th>
      <!-- string -->
      <th scope="col">
        <input
          type="text"
          class="tableSearchInput"
          id="permission_group_name"
          onkeyup="tableSearchFunction(this.id)"
          placeholder="permission Group Name"
        />
      </th>
      <th scope="col">
        <input
          type="text"
          class="tableSearchInput"
          id="id"
          onkeyup="tableSearchFunction(this.id)"
          placeholder="ID"
        />
      </th>
      <!-- number -->
      <th scope="col">
        <input
          type="text"
          class="tableSearchInput"
          id="permission_type"
          onkeyup="tableSearchFunction(this.id)"
          placeholder="Permission Type"
        />
      </th>
    </tr>
  </thead>
  <!-- table body -->
  <tbody id="container">
    <% if (permission_groups) { %> <% permission_groups.forEach(function(pg){%>

    <tr
      onclick="selectRow(this)"
      id="<%=pg.permission_id%><%=pg.permission_group_name%>"
    >
      <!-- TDs ########################################################## -->
      <td class="checkbox">
        <!-- style="pointer-events: none;" makes it so the checkbox doesnt click itself -->
        <input
          type="checkbox"
          style="pointer-events: none"
          name="check<%=pg.permission_id%><%=pg.permission_group_name%>"
          value="<%=pg.permission_id%><%=pg.permission_group_name%>"
          id="check<%=pg.permission_id%><%=pg.permission_group_name%>"
        />
      </td>
      <td class="permission_group_name"><%=pg.permission_group_name%></td>
      <td class="id"><%=pg.permission_id%></td>
      <td class="permission_type"><%=pg.permission_type%></td>
    </tr>

    <% }) %> <% } %>
    <script src="js/permissionGroups/permissionGroupTableLogic.js"></script>
  </tbody>
</table>
