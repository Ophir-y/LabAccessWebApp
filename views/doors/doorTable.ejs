<!-- 2 of 2 -->
<!-- table divider -->
<table class="table" id="people_table">
  <!-- <label for="people_table">People Table</label> -->
  <thead>
    <tr>
      <th class="table_checkbox" scope="col"></th>
      <!-- <input type="checkbox" name="select_row" id="select_row" /> -->
      <th scope="col">ID</th>
      <!-- number -->
      <th scope="col">Door Name</th>
      <!-- string -->
      <th scope="col">Building Name</th>
      <!-- string -->
      <th scope="col">floor</th>
      <!-- number -->
    </tr>
  </thead>
  <tbody id="container">
    <% for(let d of doorss) {%>
    <tr onclick="selectRow(this)" id="<%=d.door_id%>">
      <td>
        <input
          type="checkbox"
          name="check<%=d.door_id%>"
          id="check<%=d.door_id%>"
          style="pointer-events: none"
        />
      </td>
      <td><%=d.door_id %></td>
      <td><%=d.door_name %></td>
      <td><%=d.building_name %></td>
      <td><%=d.floor_number %></td>
    </tr>
    <%}%>
    <script type="text/javascript">
      function selectRow(row) {
        const rowInput = row.getElementsByTagName("input")[0];
        rowInput.checked = !rowInput.checked;
      }
    </script>
  </tbody>
</table>
