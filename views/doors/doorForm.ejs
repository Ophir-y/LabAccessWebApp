<!-- form divider -->

<form action="/doors" method="post" id="formSide-Div">
  <p class="formLable">Enter Door ID and Details</p>
  <div class="form">
    <div class="row">
      <label class="formLable" for="doorID">ID: [DEC number]</label>
      <input
        type="text"
        class="formInput"
        name="door_id"
        id="door_id"
        placeholder="ID"
        required
        pattern="[0-9]{*}"
      />
    </div>
    <div class="row">
      <label class="formLable" for="door_name">Door Name:</label>
      <input
        type="text"
        class="formInput"
        name="door_name"
        id="door_name"
        placeholder="Door Name"
        required
      />
    </div>
    <div class="row">
      <label class="formLable" for="building_name">Building Name:</label>
      <input
        type="text"
        class="formInput"
        name="building_name"
        id="building_name"
        placeholder="Building Name"
        required
      />
    </div>
    <div class="row">
      <label class="formLable" for="floor_number">Floor:</label>
      <input
        type="number"
        class="formInput"
        name="floor_number"
        id="floor_number"
        placeholder="Floor"
        required
      />
    </div>

    <button type="submit" class="formButton">Press To Submit</button>
  </div>
</form>
